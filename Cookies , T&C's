def check_cookies(): #Checks to see if the cookies checkbox is checked
    if cookie_check.value:  # Enable login button if checkbox is checked
        info("COOKIES", "We use cookies to give you the best online experience, Please let us know if you agree to all of these cookies.")

        open_button.enable()
    else:
        open_button.disable()


